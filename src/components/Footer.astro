---
import Container from '@components/Container.astro';
import IconGithub from '@svgs/github.svg';
import IconMail from '@svgs/mail.svg';
import IconStar from '@svgs/star.svg';
import { Image } from 'astro:assets';
---

<footer class="mt-96">
	<Container customClass="relative">
		<!-- Avatar positioned to overlap footer edge: 190px aligns with container padding, 69% creates peek effect -->
		<Image
			src="/images/footer-avatar.webp"
			alt="Avatar de Mehdi Cheniki"
			width="166"
			height="230"
			class="max-lg:hidden absolute top-0 left-0 translate-x-[190px] -translate-y-[69%]"
		/>
		<div
			class="flex flex-col items-center justify-between gap-48 rounded-32 bg-base-600 px-64 py-24 text-base-600 md:flex-row"
		>
			<ul class="flex gap-24">
				<li>
					<a href="mailto:hello@mcheniki.dev" class="text-base-50">
						<IconMail width="20" height="20" fill="currentColor" />
						<span class="sr-only"> Envoyer un e-mail </span>
					</a>
				</li>
				<li>
					<a
						href="https://github.com/mehdired"
						class="text-base-50"
						target="_blank"
						rel="noreferrer noopener"
					>
						<IconGithub width="20" height="20" fill="currentColor" />
						<span class="sr-only"> Aller sur Github </span>
					</a>
				</li>
			</ul>
			<p class="text-center text-primary-500">
				Mehdi Cheniki
				<br />
				<span class="text-base-200 text-12">Copyright © 2026 - Tous droits réservés</span>
			</p>
			<div class="max-md:hidden"></div>
		</div>
		<p
			class="flex items-center justify-center gap-6 py-24 text-12 text-base-100 max-md:flex-col"
		>
			Développé par
			<span>Mehdi Cheniki</span>
			<IconStar width="12" height="12" fill="currentColor" />
			Designé par
			<a
				href="https://elkhantour.com"
				target="_blank"
				class="underline"
				rel="noreferrer noopener"
			>
				Nassim El Khantour
			</a>
		</p>
	</Container>
</footer>
